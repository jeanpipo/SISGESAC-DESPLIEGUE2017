{% extends 'Curso.html.twig' %}

{% block contenido %}

<center><h2>Retirar Unidad Curricular</h2></center>
<div class="row">
	<div class="col-md-12">
		<center>
		<div class="col-md-6">
			Instituto:
			<div id="divInst">
				<select class='selectpicker' id="selInst" onchange="cargarPensums()" title='Seleccione Instituto'>
				</select>
			</div>
			<br>
			Pensum:
			<div id="divPen">
				<select class='selectpicker' id="selPen" onchange="cargarPeriodos()" data-live-search='true' data-size='auto' multiple data-max-options="1" title='Seleccione Pensum'>
				</select>
			</div>
			<br>

		</div>
		<div class="col-md-6">
		Periodo:
			<div id="divPer">
				<select class='selectpicker' id="selPer" onchange="cargarEstudiantes()" data-live-search='true' data-size='auto' multiple data-max-options="1" title='Seleccione Periodo'>
				</select>
			</div>
			<br>
			Estudiante:
			<div id="divEstudiante">
				<select class='selectpicker' id="selEstudiante" onchange="listarUniEstudiante()" data-live-search='true' data-size='auto' multiple data-max-options="1" title='Seleccione Periodo'>
				</select>
			</div>
		</div>
	</div>
</div>
<center>

<div class="row">
	<div class="col-md-12" id='listaC'>
			
	</div>
</div>

{% endblock %}
